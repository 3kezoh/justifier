{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2015",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./src/@types", "./node_modules/@types", "./node_modules/**/*"],
    "baseUrl": "src",
    "paths": {
      "@@*": ["@types/*"],
      "@components": ["components/index.ts"],
      "@components/*": ["components/*"],
      "@Auth": ["components/auth/index.ts"],
      "@Auth/*": ["components/auth/*"],
      "@Text": ["components/text/index.ts"],
      "@Text/*": ["components/text/*"],
      "@User": ["components/user/index.ts"],
      "@User/*": ["components/user/*"],
      "@bin": ["bin/index.ts"],
      "@bin/*": ["bin/*"],
      "@config": ["config/index.ts"],
      "@config/*": ["config/*"],
      "@lib": ["lib/index.ts"],
      "@lib/*": ["lib/*"],
      "@middlewares": ["middlewares/index.ts"],
      "@middlewares/*": ["middlewares/*"],
      "@utils": ["utils/index.ts"],
      "@utils/*": ["utils/*"],
      "@test": ["utils/test/index.ts"],
      "@test/*": ["utils/test/*"]
    }
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "transpileOnly": true
  }
}
